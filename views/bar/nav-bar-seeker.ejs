<!DOCTYPE HTML>
<html>
<head>
    <%- include('../bar/css-init')%>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bar/nav-bar-seeker.css" >
</head>
<body>
<nav class="navbar navbar-light navbar-expand-lg bg-light">
    <div class="container-fluid">
        <div class="navbar-header">
            <!-- LOGO COMPANY -->
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="logo-project" height="70px">
            </a>
        </div>
        <ul class="nav navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/all-job">Tất cả công việc</a>
            </li>
            <!--<li class="nav-item">
                <a class="nav-link" href="#">Công ty</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Liên hệ</a>
            </li>-->
        </ul>

        <!-- CHECK LOGIN BY SEEKER -->
        <ul class="nav navbar-nav navbar-right">
            <% if (auth && auth.permission.S == "Seeker") { %>
                <li class="nav-item dropdown">
                    <button class="btn btn-outline-dark" name="seeker-menu">
                        <span class="fas fa-align-justify fa-2x" />
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item btn btn-outline-light" href="/seeker/account">Tài khoản</a>
