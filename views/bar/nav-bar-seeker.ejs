                        <a class="dropdown-item btn btn-outline-light" href="/seeker/job-notification">Thông báo việc làm</a>
                        <a class="dropdown-item btn btn-outline-light" id="logout">Đăng xuất</a>
                    </div>
                </li>
            <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/register"><span class="fa fa-user"/> Đăng ký</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login"><span class="fa fa-lock"/> Đăng nhập</a>
                </li>
            <% } %>
        </ul>
    </div>
</nav>

</body>
<footer>
    <%- include('../bar/js-init')%>
    <script type="text/javascript" src="/javascripts/bar/nav-bar-seeker.js"></script>
</footer>
</html>

