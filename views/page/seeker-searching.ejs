<html lang="vi">
<head>
    <title>Tìm kiếm người tìm việc</title>
    <link type="text/css" rel="stylesheet" href="/stylesheets/page/seeker-searching.css" >
</head>
<body>
    <%- include('../bar/nav-bar-manager')%>
    <%- include('../bar/seeker-search-bar')%>
    <div class="container" id="main-content">
        <div class="row" >
            <div class="col-md-4" name="seeker-list" >
                <% if (JSON.stringify(input)=='[]') {%>
                    <h5 class="text-center mt-5">No data found</h5>
                <% } else {%>
                <% input.forEach(function(it){ %>
                    <%- include('../items/seeker-item')%>
                <% }) }%>
            </div>
            <div class="col-md-8" name="seeker-info">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab"
                           data-toggle="tab" href="#home" role="tab"
                           aria-controls="home" aria-selected="true">Thông tin chung</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab"
                           data-toggle="tab" href="#profile" role="tab"
                           aria-controls="profile" aria-selected="false">Hồ sơ</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <section class="primary-info">
                            <div class="row">
                                <label class="col-md-4">Họ và tên:</label>
                                <p class="col-md"></p>
                            </div>
                            <div class="row">
                                <label class="col-md-4">Tuổi:</label>
                                <p class="col-md"></p>
                            </div>
                            <hr>
                            <h4>Sơ yếu lý lịch</h4>
                            <div class="row">
                                <label class="col-md-4">Công việc mong muốn:</label>
                                <p class="col-md"></p>
                            </div>
                            <div class="row">
                                <label class="col-md-4">Kỹ năng cá nhân:</label>
                                <p class="col-md"></p>
                            </div>
                            <div class="row">
                                <label class="col-md-4">Bằng cấp hiện tại:</label>
                                <p class="col-md"></p>
                            </div>
                            <div class="row">
                                <label class="col-md-4">Đã hoặc đang làm việc ở:</label>
                                <p class="col-md"></p>
                            </div>
                            <hr>
                            <h4>Thông tin liên hệ</h4>
                            <div class="row">
                                <label class="col-md-4">Số điện thoại:</label>
                                <p class="col-md"></p>
                            </div>
                            <div class="row">
                                <label class="col-md-4">Emai:</label>
                                <p class="col-md"></p>
                            </div>
                        </section>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <section class="cv-file">

                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<footer>
    <script type="text/javascript" src="/javascripts/page/seeker-searching.js"></script>
</footer>
</html>