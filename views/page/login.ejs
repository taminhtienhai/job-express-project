<body>
<form method="post" action="/login">
    <div class="container">
        <div class="form-group">
            <label for="user">Tài khoản</label>
            <input id="user" class="form-control" type="text" placeholder="Nhập tên đăng nhập" name="username" required>
        </div>
        <div class="form-group">
            <label for="pass">Mật khẩu:</label>
            <input id="pass" class="form-control" type="password" placeholder="Nhập mật khẩu" name="password" required>
        </div>
        <!-- SUBMIT -->
        <div class="form-group">
            <input class="form-control btn btn-success" type="submit" value="Đăng nhập"><br>
        </div>
    </div>
</form>
</body>
</html>