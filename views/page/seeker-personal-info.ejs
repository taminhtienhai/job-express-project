<html>
<head>
    <title>Thông tin tài khoản</title>
</head>
<body>
<%- include('../bar/nav-bar-seeker')%>
<div class="container">
    <h3 class="lead">TÀI KHOẢN</h3>
    <hr style="border: 3px dot-dash black">
    <form method="post" action="/save-account" class="w-50">
        <div class="form-row">
            <div class="form-group col-md">
                <label>Họ<span class="text-danger">*</span>:</label>
                <% if (input.first_name) { %>
                <input type="text" class="form-control-plaintext" name="first_name" value=<%=input.first_name%>>
                <% } else {%>
                <input type="text" class="form-control" name="first_name" >
                <% } %>
                <small class="text-danger"><%=error.first_name?error.first_name.msg:''%></small>
            </div>
            <div class="form-group col-md">
                <label>Tên<span class="text-danger">*</span>:</label>
                <% if (input.last_name) { %>
                    <input type="text" class="form-control-plaintext" name="last_name" value=<%=input.last_name%>>
                <% } else {%>
                    <input type="text" class="form-control" name="last_name">
                <% } %>
                <small class="text-danger"><%=error.last_name?error.last_name.msg:''%></small>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md">
                <label>Ngày sinh:</label>
                <% if (input.birthday) { %>
                    <input type="date" class="form-control-plaintext" name="birthday" value=<%=input.birthday%>>
                <% } else {%>
                    <input type="date" class="form-control" name="birthday">
                <% } %>
                <small class="text-danger"><%=error.birthday?error.birthday.msg:''%></small>
            </div>
            <div class="form-group col-md">
                <label>Giới tính:</label>
                <div class="mt-2">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="male" id="inlineRadio1" value="male" checked>
                        <label class="form-check-label" for="inlineRadio1">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="female" id="inlineRadio2" value="female">
                        <label class="form-check-label" for="inlineRadio2">Nữ</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Tỉnh thành:</label>
            <select class="form-control selectpicker" data-live-search="true" data-size="5" name="city">
                <%- include('../items/city-item')%>
            </select>
        </div>
        <input type="submit" class="btn btn-success float-right" value="Lưu" >
    </form>
</div>
</body>
</html>